<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% for post in site.posts %}
  <url>
    <loc>http://sylvain.durand.tf{{ post.url }}</loc>
    {% if post.trans %}
      <xhtml:link rel="alternate" hreflang="{{ post.lang }}" href="http://sylvain.durand.tf{{ post.url }}" />
      <xhtml:link rel="alternate" hreflang="{% if post.lang != 'fr' %}fr{% else %}en{% endif %}" href="http://sylvain.durand.tf{{ post.trans }}" />
    {% endif %}
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
  </url>
  {% endfor %}
</urlset>
